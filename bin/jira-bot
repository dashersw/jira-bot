JiraBot = require('../lib/jira-bot');

var username = process.argv[2];
var password = process.argv[3];
var baseUrl = process.argv[4];
var issueKey = 'AFK-453';


// Passing a username and password in the constructor lets you use basic authentication
//var jira = new JiraBot(username, password);
var jira = new JiraBot();

jira.baseURL = baseUrl;


// Or you may use the login method for cookie logins which will expire in long sessions
jira.login(username, password, function (err, data) {
    if (err) return console.log(err);

    jira.getIssue(issueKey).on('complete', function (data) {
        console.log(data && data.fields && data.fields.summary && data.fields.summary.value || data)
    });

    //jira.logout();
});





